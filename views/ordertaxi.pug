doctype html 
html(lang='en')
    head    
        title= title 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body    
        nav(class="navbar navbar-expand-lg navbar-light bg-light")
            button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="navbarLinks" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")
            div(class="collapse navbar-collapse" id="navbarLinks")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item")
                        a(href="/" class="nav-link") Home
                    li(class="nav-item")
                        a(href="/aboutus" class="nav-link") About Us
                    li(class="nav-item active")
                        a(href="/orderTaxi" class="nav-link") Taxi
                    li(class="nav-item")
                        a(href="/contact" class="nav-link") Contact
                    li(class="nav-item active")
                        a(href="/rides" class="nav-link") Pending Rides
                    li(class="nav-item country")
        div(class="container m-5")
            div(class="card")
                div(class="row")
                    div(class="col-7 col-sm-8")
                        img(src="/car2.jpg" alt="Car image" class="img-fluid")
                    div(class="col-5 col-sm-4")
                        div(class="card-body")
                            h5(class="card-title") Featured Vehicle 
                            p(class="card-text")
                            button(id="order-1" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inputModal") Order this Vehicle
        div(class="container m-5")
            div(class="card")
                div(class="row")
                    div(class="col-7 col-sm-8")
                        img(src="/van2.jpg" alt="Van image" class="img-fluid")
                    div(class="col-5 col-sm-4")
                        div(class="card-body")
                            h5(class="card-title") Featured Vehicle 
                            p(class="card-text")
                            button(id="order-2" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inputModal") Order this Vehicle
        div(class="container m-5")
            div(class="card")
                div(class="row")
                    div(class="col-7 col-sm-8")
                        img(src="/bus2.jpg" alt="Bus image" class="img-fluid")
                    div(class="col-5 col-sm-4")
                        div(class="card-body")
                            h5(class="card-title") Featured Vehicle 
                            p(class="card-text")
                            button(id="order-3" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inputModal") Order this Vehicle
        div(class="container m-5")
            div(class="card")
                div(class="row")
                    div(class="col-7 col-sm-8")
                        img(src="/truck2.jpg" alt="Truck image" class="img-fluid")
                    div(class="col-5 col-sm-4")
                        div(class="card-body")
                            h5(class="card-title") Featured Vehicle 
                            p(class="card-text")
                            button(id="order-4" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inputModal") Order this Vehicle
        div(class ="modal fade" id="inputModal" tabindex="-1" role="dialog" aria-labelledby="truckModal" aria-hidden="true")
            div(class="modal-dialog modal-dialog-centered" role="document")
                div(class="modal-content")
                    form(action="http://127.0.0.1:3010/api/addOrder")
                        div(class="modal-header")
                            h5(class="modal-title" id="ModalTitle") Request this vehicle?
                            button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
                        div(class="modal-body")
                            div(class="row mb-3")
                                label(for="email" id="Email" class="col-sm-2 col-form-label") Email: 
                                div(class="col-sm-10")
                                    input(type="text" class="form-control" name="email" id="emailInput")
                            div(class="row mb-3")
                                label(for="cellphone" id="Phone-Num" class="col-sm-2 col-form-label") Phone Number: 
                                div(class="col-sm-10")
                                    input(type="text" class="form-control" name="cellphone" id="cellInput")
                            input(type="hidden" name="cost" class="costInput")
                            input(type="hidden" name="location" class="location")
                            button(type="button" class="btn btn-primary confirm" id="getCost") Get Cost 
                            div(class="d-none form")
                                div(class="modal-title" id="ModalTitle") Confirm Order?
                                    div(class="modal-body")
                                        p(class="cost")            
                        div(class="modal-footer")
                            button(type="button" class="btn btn-secondary" data-bs-dismiss="modal") Close
                            button(type="submit" class="btn btn-primary submit" id="submitOrder") Submit
        script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")
